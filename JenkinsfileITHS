pipeline {
    agent any
    stages{
        stage('Checkout'){
            steps {
                git 'https://github.com/Magothen/fooproject.git'
            }
        }
        stage('JUnit Build') {
            steps {
                sh "mvn compile"
            }
        }
        stage('JUnit Test') {
            steps {
                sh "mvn test"
            }
            post {
                always {
                    junit '**/TEST*.xml'
                }
            }
        }
    }
}
